{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "strict": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@rapidocs/rapidocs-lib-domain": ["libs/rapidocs-lib-domain/src/index.ts"],
            "@rapidocs/rapidocs-lib-components": ["libs/rapidocs-lib-components/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
